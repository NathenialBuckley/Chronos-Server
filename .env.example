# Django Environment Configuration
# Copy this file to .env and update with your actual values

# Environment type: development or production
DJANGO_ENV=development

# SECRET KEY - REQUIRED IN PRODUCTION
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
DEBUG=False

# Allowed hosts (comma-separated, required in production)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CORS allowed origins (comma-separated, required in production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL redirect (set to False if handling SSL at reverse proxy level)
SECURE_SSL_REDIRECT=True

# Database configuration
# Option 1: Use DATABASE_URL (Heroku-style, recommended)
DATABASE_URL=postgresql://user:password@localhost:5432/chronos_db

# Option 2: Use individual database settings (if DATABASE_URL is not set)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=chronos_db
# DB_USER=chronos_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432
